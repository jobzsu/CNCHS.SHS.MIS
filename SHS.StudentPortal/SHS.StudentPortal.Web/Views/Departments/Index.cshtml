@using SHS.StudentPortal.Common.Models
@model DepartmentViewModel

<div class="modal fade" id="departmentDetailsModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Department @Model.Id</h5>
            </div>
            <div class="modal-body">
                <form class="mt-2" asp-controller="Account" asp-action="Register" method="post">
                    <h5 class="card-title">Department Information</h5>
                    <hr />
                    <div class="row gx-3 gy-3">
                        <div class="col-12">
                            <label>Name</label>
                            <input type="text" class="form-control" asp-for="@Model.Name" disabled />
                        </div>
                        <div class="col-12">
                            <label>Description</label>
                            <textarea rows="5" cols="555" class="form-control" asp-for="@Model.Description" disabled></textarea>
                        </div>
                    </div>
                    <h5 class="card-title mt-3">Instructors</h5>
                    <hr />
                    <div class="row gx-3 gy-3">
                        <div class="col-12">
                            <table class="table table-striped table-hover text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">Professor Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Instructors.Count() == 0)
                                    {
                                        <tr>
                                            <th colspan="1"><h3>No Instructors Found</h3></th>
                                        </tr>
                                    }
                                    else
                                    {
                                        foreach (var instr in Model.Instructors)
                                        {
                                            <tr>
                                                <td>@instr</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" tabindex="-1">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" tabindex="-1">Close</button>
            </div>
        </div>
    </div>
</div>