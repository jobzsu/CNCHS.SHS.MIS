
@{
    ViewData["Title"] = "Instructor Detail";
}

<div class="modal fade" id="instructorInfoDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">INSTRUCTOR 1000</h5>
            </div>
            <div class="modal-body">
                <form class="mt-2" asp-controller="Account" asp-action="Register" method="post">
                    <h5 class="card-title">Employee Information</h5>
                    <hr />
                    <div class="row gx-3 gy-3">
                        <div class="col-lg-4 col-12">
                            <label>Employee Id</label>
                            <input type="text" class="form-control" value="1000"  disabled/>
                        </div>
                        <div class="col-lg-4 col-12">
                            <label>Major</label>
                            <input type="text" class="form-control" value="Computer Science" disabled />
                        </div>
                        <div class="col-lg-4 col-12">
                            <label>Department</label>
                            <select class="form-select" disabled>
                                <option selected value="pending">ICT</option>
                            </select>
                        </div>
                    </div>
                    <h5 class="card-title mt-3">Personal Information</h5>
                    <hr />
                    <div class="row gx-3 gy-3">
                        <div class="col-lg-3 col-12">
                            <label>First Name</label>
                            <input type="text" class="form-control" value="John" disabled />
                        </div>
                        <div class="col-lg-3 col-12">
                            <label>Middle Name</label>
                            <input type="text" class="form-control" disabled />
                        </div>
                        <div class="col-lg-3 col-12">
                            <label>Last Name</label>
                            <input type="text" class="form-control" value="Doe" disabled  />
                        </div>
                        <div class="col-lg-3 col-12">
                            <label>Contact Information</label>
                            <input type="text" class="form-control" value="+63 912 345 6789" disabled />
                        </div>
                    </div>
                    <h5 class="card-title mt-3">Sections Assigned</h5>
                    <hr />
                    <div class="row gx-3 gy-3">
                        <div class="col-lg-4">
                            <h4>Semester: 2nd</h4>
                        </div>
                        <div class="col-lg-6">
                            <h4>Academic Year: 2022 - 2023</h4>
                        </div>
                        <div class="col-12">
                            <table class="table table-striped table-hover text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">Section</th>
                                        <th scope="col">Grades Submitted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th colspan="5"><h3>No Records Found</h3></th>
                                    </tr>
                                    @* else
                                    {
                                        foreach (var sched in Model.CurrentSchedules.Schedules)
                                        {
                                            <tr>
                                                <td>@sched.Days</td>
                                                <td>@sched.Subject</td>
                                                <td>@sched.Instructor</td>
                                                <td>@sched.Time</td>
                                                <td>@sched.RoomNumber</td>
                                            </tr>
                                        }
                                    } *@
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @* <button type="submit" class="btn btn-primary float-end">Submit</button> *@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" tabindex="-1">Close</button>
            </div>
        </div>
    </div>
</div>